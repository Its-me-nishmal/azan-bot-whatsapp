# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/azan-bot
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/azan-bot

# Server Configuration
PORT=3000
NODE_ENV=development

# Bot Configuration
TIMEZONE=Asia/Kolkata
NOTIFICATION_OFFSET_MINUTES=0
LOG_LEVEL=info

# Prayer times to send notifications for (comma-separated)
# Options: fajr, dhuhr, asr, maghrib, isha
ENABLED_PRAYERS=fajr,dhuhr,asr,maghrib,isha
