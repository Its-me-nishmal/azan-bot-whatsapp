# MongoDB Connection
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/azanbot?retryWrites=true&w=majority

# Server Configuration
PORT=3000
NODE_ENV=production

# IMPORTANT: Timezone is hardcoded to Asia/Kolkata (IST) in the code
# This ensures correct prayer times regardless of server deployment location
# The app will ALWAYS use IST (UTC+5:30) for all time operations

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# WhatsApp Session Storage
SESSION_DIR=./auth_info

# Prayer Times Configuration
# Enabled prayers (comma-separated list)
ENABLED_PRAYERS=fajr,dhuhr,asr,maghrib,isha

# Logging
LOG_LEVEL=info
